<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10sp"
    app:cardElevation="5sp"
    android:layout_margin="4sp"
    android:padding="4sp"
    app:strokeWidth="2sp"
    app:strokeColor="#DA5B31">

    <LinearLayout
        android:id="@+id/vh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/vh_ibtn_logo"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_marginStart="8sp"
            android:layout_marginTop="6sp"
            android:layout_marginEnd="6sp"
            android:layout_marginBottom="6sp"
            android:scaleType="fitXY"
            android:background="@null"
            android:clickable="false"
            android:src="@drawable/green_bubble" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:gravity="center|start"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5sp"
            android:layout_marginEnd="5sp"
            >
            <TextView
                android:id="@+id/vh_tv_course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textSize="18sp"
                android:textStyle="bold"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="18sp"
                android:autoSizeMinTextSize="16sp"
                android:text="Course Name"
                android:textColor="#2B0287"
                />
            <TextView
                android:id="@+id/vh_tv_channel_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:maxLines="1"
                android:textSize="20sp"
                android:textStyle="italic|bold"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="22sp"
                android:autoSizeMinTextSize="16sp"
                android:text="\@ Channel Name Channel Name"
                android:textColor="@color/black"
                />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>