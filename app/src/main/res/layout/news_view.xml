<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10sp"
    app:cardElevation="5sp"
    android:layout_marginTop="3sp"
    android:layout_marginBottom="5sp"
    app:strokeWidth="2sp"
    app:strokeColor="@color/purple_200"
    >

    <ImageButton
        android:id="@+id/vn_ibtn_logo"
        android:layout_width="match_parent"
        android:layout_height="75sp"
        android:alpha="0.1"
        android:background="@null"
        android:src="@drawable/black_bubble"
        android:clickable="false"
        />

    <LinearLayout
        android:id="@+id/vn_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="1sp"
            android:weightSum="10">

            <TextView
                android:id="@+id/tv_n_course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course Name"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="24sp"
                android:autoSizeMinTextSize="18sp"
                android:layout_weight="9"/>

            <TextView
                android:id="@+id/tv_modified_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:text="ModifiedDate"
                android:gravity="end"
                android:maxLines="1"
                android:layout_gravity="center_vertical"
                android:textSize="16sp"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="16sp"
                android:autoSizeMinTextSize="14sp"
                android:layout_weight="1"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_n_instructor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1sp"
            android:layout_marginBottom="1sp"
            android:text="Instructor Name"
            android:textSize="24sp"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="24sp"
            android:autoSizeMinTextSize="18sp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tv_n_center_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1sp"
            android:layout_marginBottom="1sp"
            android:text="Instructor Name"
            android:textSize="24sp"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="24sp"
            android:autoSizeMinTextSize="18sp"
            android:visibility="visible"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2sp"
            android:text="@string/new_"
            android:textSize="20sp"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="20sp"
            android:autoSizeMinTextSize="15sp"/>

        <TextView
            android:id="@+id/tv_what_is_new"
            android:layout_width="match_parent"
            android:layout_height="24sp"
            android:layout_marginTop="1sp"
            android:paddingLeft="8sp"
            android:paddingRight="8sp"
            android:text="What's new ......"
            android:textSize="18sp"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="18sp"
            android:autoSizeMinTextSize="15sp"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
